{
  "name": "event-store-adapter-js",
  "version": "1.0.0",
  "description": "This library is designed to turn DynamoDB into an Event Store for Event Sourcing.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "fix": "npm run fix:prettier && npm run fix:eslint",
    "fix:eslint": "eslint --fix .",
    "fix:prettier": "prettier --write \"**/*.{js,ts,jsx,tsx,json}\"",
    "lint": "npm run lint:prettier && npm run lint:eslint",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check \"**/*.{js,ts,jsx,tsx,json}\"",
    "clean": "rimraf ./dist"
  },
  "keywords": [
    "ddd",
    "cqrs",
    "evnet-sourcing",
    "dynamodb"
  ],
  "author": "Junichi Kato",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "eslint": "^8.47.0",
    "jest": "^29.7.0",
    "prettier": "3.0.3",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "testcontainers": "^10.2.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.413.0",
    "moment": "^2.29.4"
  }
}
